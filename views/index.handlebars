{{!-- BEGIN MAIN CONTAINER --}}
<main role="main" class="container">
    {{!-- Logo Banner  --}}
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-fmBlue rounded shadow-sm">
        <img class="mr-3" src="/images/logo_filemaker.png" alt="" height="48">
        <div class="lh-100">
            <h6 class="mb-0 text-white lh-100">Powering Databases</h6>
            <small>Since 1985</small>
        </div>
    </div> {{!-- end Logo Banner --}}

    {{!-- BEGIN Rounded Card --}}
    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Community Posts</h6>

        {{!-- Handlebars loop content goes here --}}
        {{#each dbArticles}}
            <div class="media text-muted pt-3">
                <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                    <strong class="d-block text-gray-dark">{{title}}</strong>
                    {{slug}}
                    <br>
                    <span class="articleLinks"><a href="{{link}}" target="_blank">View Full Article</a></span>
                </p>
            </div>
        {{/each}}

        

